<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/image_song_poster"
        android:layout_width="@dimen/dp_377"
        android:layout_height="@dimen/dp_166"
        android:layout_marginTop="@dimen/dp_4"
        android:scaleType="fitXY"
        android:src="@drawable/song_poster"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/img_button_love_song"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_11"
        android:drawableLeft="@drawable/icon_love"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30"
        android:text="@string/text_love_song"
        android:textColor="@color/color_white"
        android:textSize="@dimen/sp_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_song_poster"
        />
    <TextView
        android:id="@+id/img_button_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_11"
        android:drawableLeft="@drawable/icon_time"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30"
        android:text="@string/listen_recently"
        android:textColor="@color/color_white"
        android:textSize="@dimen/sp_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_button_love_song"
        />
    <TextView
        android:id="@+id/txt_song_offline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_11"
        android:text="@string/song_offline"
        android:textColor="@color/color_white"
        android:textSize="@dimen/sp_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_button_time"
        />
    <TextView
        android:id="@+id/img_button_playlist"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_11"
        android:drawableLeft="@drawable/icon_playlist"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30"
        android:text="@string/playlist"
        android:textColor="@color/color_white"
        android:textSize="@dimen/sp_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_song_offline"
        />
    <TextView
        android:id="@+id/img_button_song"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_11"
        android:drawableLeft="@drawable/icon_song"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30"
        android:text="@string/playlist"
        android:textColor="@color/color_white"
        android:textSize="@dimen/sp_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_button_playlist"
        />
    <TextView
        android:id="@+id/img_button_author"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_11"
        android:drawableLeft="@drawable/icon_author"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30"
        android:text="@string/playlist"
        android:textColor="@color/color_white"
        android:textSize="@dimen/sp_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_button_song"
        />
    <TextView
        android:id="@+id/img_button_download"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_11"
        android:drawableLeft="@drawable/icon_download"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30"
        android:text="@string/playlist"
        android:textColor="@color/color_white"
        android:textSize="@dimen/sp_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_button_author"
        />

</android.support.constraint.ConstraintLayout>
